{
	"compilerOptions": {
		"lib": ["es2017", "dom"],
		"target": "es2017",
		"jsx": "react",
		"jsxFactory": "createElement",
		"module": "esnext",
		"moduleResolution": "node",
		"noImplicitReturns": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strict": true,
		"baseUrl": "./",
		"alwaysStrict": true,
		"forceConsistentCasingInFileNames": true,
		"paths": {
			"*": ["@types/*"]
		}
	},
	"include": ["./src/**/*.tsx", "./src/**/*.ts"],
	"exclude": ["node_modules"],
	"typeAcquisition": { "enable": true }
}
