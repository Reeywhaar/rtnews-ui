{
	"compilerOptions": {
			"lib": ["es2017", "dom"],
			"target": "es2017",
			"jsx": "preserve",
			"module": "esnext",
			"moduleResolution": "node",
			"noImplicitReturns": true,
			"noImplicitAny": true,
			"noUnusedLocals": true,
			"noUnusedParameters": true,
			"baseUrl": "./",
			"paths": {
				"*" : ["@types/*"]
			}
	},
	"include": [
		"./src/**/*.tsx",
    "./src/**/*.ts"
	],
	"exclude": [
    "node_modules"
  ],
	"typeAcquisition": {"enable": true}
}